{
  "name": "Zircon",
  "description": "This extension downloads lecture videos and can enhance them to better your learning experience. This is only available for UMN students. Current supported platforms are Unite and Kalkatura",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "popup.html",
    "default_title": "Lecture Download Configuration"
  },
  "icons": {
    "16": "static/icons/16.png",
    "32": "static/icons/32.png",
    "48": "static/icons/48.png",
    "128": "static/icons/128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://kaf.canvas.umn.edu/channel/*"],
      "js": ["src/util/logger.js", "src/util/media.js", "src/kaltura_grid.js"],
      "css": ["static/css/kaltura_grid.css"],
      "all_frames": true
    },
    {
      "matches": ["https://kaf.canvas.umn.edu/media/*"],
      "js": [
        "src/util/logger.js",
        "src/util/media.js",
        "src/kaltura_player.js"
      ],
      "css": ["static/css/kaltura_player.css"],
      "all_frames": true
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["storage", "management", "scripting", "tabs"],
  "host_permissions": ["http://localhost:3000/*"]
}
